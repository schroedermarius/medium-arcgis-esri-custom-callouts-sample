<?xml version="1.0" encoding="utf-8"?>

<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcGISEsriCustomCalloutsSample.CustomCallout"
             BackgroundColor="Transparent"
             HorizontalOptions="Fill"
             MaximumWidthRequest="{OnPlatform WinUI=400,
                                     Default=300}"
             RowDefinitions="Auto,*"
             VerticalOptions="Fill">
    <Label
        x:Name="Label"
        Grid.Row="0"
        FontAttributes="{OnPlatform WinUI=Bold}"
        FontSize="{OnPlatform WinUI=18,
                              Default=Medium}" />
    
    <Label
        Grid.Row="1"
        x:Name="Description"
        FontSize="{OnPlatform WinUI=14,
                              Default=Small}" />
</Grid>